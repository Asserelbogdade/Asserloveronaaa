    <!-- Hearts Animation JS -->
    <script>
    // Generate floating hearts between random positions, with varied sizes/timing!
    function randomBetween(a, b) { return Math.random() * (b - a) + a; }
    const heartImgs = [
        // Free PNG hearts (no copyright): you can even add more!
        'https://pngimg.com/uploads/heart/heart_PNG51147.png',
        'https://pngimg.com/uploads/heart/heart_PNG51337.png',
        'https://pngimg.com/uploads/heart/heart_PNG51254.png'
    ];
    function makeHeart() {
        const d = document.createElement('img');
        d.src = heartImgs[Math.floor(Math.random()*heartImgs.length)];
        d.className = 'heart';
        d.style.left = randomBetween(-4,96)+'vw';
        d.style.width = d.style.height = randomBetween(30,55)+'px';
        d.style.animationDelay = randomBetween(0,5)+'s';
        d.style.animationDuration = randomBetween(9, 16)+'s';
        d.style.opacity = randomBetween(.16,.23);
        document.querySelector('.hearts-bg').appendChild(d);
        setTimeout(()=>{d.remove();},16000);
    }
    setInterval(makeHeart, 700);
    for(let i=0;i<9;i++) setTimeout(makeHeart, i*500);

    // Simple lightbox: click image, show large, click anywhere to close
    document.querySelectorAll('.image-gallery img').forEach(img=>{
        img.onclick = function() {
            const o = document.createElement('div');
            o.className = 'lightbox-overlay';
            o.onclick = ()=>o.remove();
            const im = document.createElement('img');
            im.src = img.src; im.alt = img.alt; o.appendChild(im);
            document.body.appendChild(o);
        };
    });

    // Audio autoplay attempt + fallback button if blocked
    (function(){
        const audio = document.getElementById('bg-audio');
        const btn = document.getElementById('audio-btn');

        // helper to update button text/state
        function updateButton() {
            if (audio.paused) {
                btn.textContent = 'Ø¯ÙˆØ³ÙŠ Ù‡Ù†Ø§ ';
                btn.setAttribute('aria-pressed','false');
            } else {
                btn.textContent = 'Ø¥ÙŠÙ‚Ø§Ù Ø§Ù„Ù…ÙˆØ³ÙŠÙ‚Ù‰';
                btn.setAttribute('aria-pressed','true');
            }
        }

        // Try to play on load
        function tryPlay() {
            if (!audio) return Promise.reject();
            // set a small initial volume if you want (0.9):
            audio.volume = 0.9;
            return audio.play();
        }

        // If autoplay blocked, show visible play button
        tryPlay().then(()=>{
            // autoplay succeeded
            btn.style.display = 'none';
        }).catch((err)=>{
            // autoplay blocked â€” show button so user can start music manually
            btn.style.display = 'block';
            updateButton();
        });

        // clicking the button toggles play/pause (this is a user gesture so will always work)
        btn.addEventListener('click', function(e){
            e.stopPropagation();
            if (audio.paused) {
                audio.play().then(updateButton).catch(()=>{/* ignore */});
            } else {
                audio.pause();
                updateButton();
            }
        });

        // also try to start audio on first user interaction anywhere (some devices allow this)
        function onFirstInteraction() {
            document.removeEventListener('click', onFirstInteraction);
            document.removeEventListener('touchstart', onFirstInteraction);
            tryPlay().then(()=>{
                btn.style.display = 'none';
            }).catch(()=>{ btn.style.display = 'block'; updateButton(); });
        }
        document.addEventListener('click', onFirstInteraction, {once:true});
        document.addEventListener('touchstart', onFirstInteraction, {once:true});
    })();
    </script>
